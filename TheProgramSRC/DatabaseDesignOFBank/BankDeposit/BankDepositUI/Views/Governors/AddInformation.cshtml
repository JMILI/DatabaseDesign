@{
    Layout = "_SignInLayout";

    ViewData["Title"] = "Home Page";

    //var user = Model;
}
    <form name="form1" class="form-horizontal" role="form" method="post" action="@Url.Action("AddLogin","Governors")" onSubmit="return beforeSubmit(this);">
        <div class="form-group">
            <label for="YourName" class="col-sm-4 control-label">用户名</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker" name="Mname" value="">
            </div>
        </div>
        <div class="form-group">
            <label for="colorpicker-rgb" class="col-sm-4 control-label">密码</label>
            <div class="col-sm-8">
                <input type="password" class="form-control colorpicker-element" id="colorpicker-rgb" name="Mpassword" value="">
            </div>
        </div>
        <div class="form-group">
            <label for="colorpicker-rgb" class="col-sm-4 control-label">身份</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker-rgb" name="Midentify" value="">
            </div>
        </div>
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-greensea">提交</button>
            <button type="reset" class="btn btn-red">重新输入</button>
        </div>
    </form>
<script type="text/javascript">
    function beforeSubmit(form) {
      if (form.Midentify.value == '') {
            alert('身份不能为空！');
            form.Midentify.focus();
            return false;
        }
        if (form.Mname.value == '') {
            alert('用户名不能为空！');
            form.Mname.focus();
            return false;
        }
        if (form.Mpassword.value == '') {
            alert('密码不能为空！');
            form.Mpassword.focus();
            return false;
        }
    }
</script>
