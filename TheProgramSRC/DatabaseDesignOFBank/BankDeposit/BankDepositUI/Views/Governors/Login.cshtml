@{
    Layout = "_GovernorsPageLayout";

    ViewData["Title"] = "Home Page";

    var user = Model;
}
<script src="~/js/echarts.min.js"></script>
<script src="~/assets/js/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<div class="jumbotron bg-transparent-black-3">
    <div class="container text-center">
        <h2>您好!@user.Mname</h2>
    </div>
</div>
<div>
    <div id="container" style="width: 600px;height:400px;"></div>
    <div id="container4" style="width: 600px;height:400px;"></div>
    <script type="text/javascript">
        var dom = document.getElementById("container");
        var myChart = echarts.init(dom);
        var app = {};
        option = null;
        app.title = '正负条形图';
        option = {
            tooltip: {
                trigger: 'axis',
                axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                    type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                }
            },
            legend: {
                data: ['利润']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis: [
                {
                    type: 'category',
                    axisTick: { show: false },
                    data: ['今天1', '昨天2', '前天3','4','5','6','7']
                }
            ],
            yAxis: [
                {
                    type: 'value'
                }
            ],
            series: [
                {
                    name: '利润',
                    type: 'bar',
                    label: {
                        normal: {
                            show: true,
                            position: 'inside'
                        }
                    },
                    data: [23,15,34,13,46,63,26]
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }
        $(function () {
            initBind(); //初始化所有绑定函数
        })
        function initBind() {
            $('#Profits').bind('click', function () {
                var url = "/Governors/StatisticalByMonth";
                var nums = [];
                $.ajax(
                    {
                        "url": url,
                        "async": true,
                        dataType: "json",	//必须加，将json字符串转换为json格式
                        success: function (result) {
                            if (result) {
                                for (var i = 0; i < result.length; i++) {
                                    //挨个取出销量并填入销量数组
                                    nums.push(result[i].Profits);
                                }
                                myChart.hideLoading();    //隐藏加载动画
                                myChart.setOption(
                                    {        //加载数据图表
                                        series: [
                                            {
                                                // 根据名字对应到相应的系列
                                                name: '利润',
                                                data: nums
                                            }]
                                    });
                            }
                        }
                    });
            });
        }
        var dom4 = document.getElementById("container4");
        var myChart4 = echarts.init(dom4);
        ////myChart.showLoading({text: '正在努力的读取数据中...'  });
        var app4 = {};
        option = null;
        option = {
            legend: {},
            tooltip: {},
            dataset:
            {
                source: [
                    //['product', '支出(单位/万元)', '利润(单位/万元)', '收入(单位/万元)'],
                    ['1月', 123, 156, 789],
                    ['2月', 567, 235, 123],
                    ['3月', 123, 156, 709],
                    ['4月', 567, 245, 193],
                    ['5月', 233, 156, 789],
                    ['6月', 577, 255, 123],
                    ['7月', 103, 156, 789],
                    ['8月', 567, 235, 123],
                    ['9月', 1453, 156, 789],
                    ['10月', 567, 235, 123],
                    ['11月', 133, 156, 509],
                    ['12月', 567, 235, 563],
                ]
            },
            xAxis: {
                type: 'category',
            },
            yAxis: {},
            series: [
                {
                    name: '支出(单位/万元)',
                    type: 'bar'
                },
                {
                    name: '利润(单位/万元)',
                    type: 'bar'
                },
                {
                    name: '收入(单位/万元)',
                    type: 'bar'
                }
            ]
        };

        if (option && typeof option === "object") {
            myChart4.setOption(option, true);
        }
        $(function () {
            initBind4(); //初始化所有绑定函数
        })
        function initBind4() {
            $('#tongji').bind('click', function () {
                var url = "/Governors/StatisticalByMonth";
                var nums4 = [];
                $.ajax({
                    "url": url,
                    "async": true,
                    dataType: "json",	//必须加，将json字符串转换为json格式
                    success: function (result) {
                        if (result) {
                            for (var i = 0; i < result.length; i++) {
                                //挨个取出销量并填入销量数组
                                nums4.push(result[i]);
                            }
                            myChart4.hideLoading();    //隐藏加载动画
                            myChart4.setOption(
                                {        //加载数据图表
                                    dataset:
                                    {
                                        source: nums4
                                    }
                                });
                        }
                    }
                })
            })
        }
    </script>
</div>

