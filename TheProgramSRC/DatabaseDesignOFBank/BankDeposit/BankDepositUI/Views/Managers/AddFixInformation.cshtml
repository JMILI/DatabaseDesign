@{
    Layout = "_SignInLayout";

    ViewData["Title"] = "Home Page";

    //var user = Model;
}
    <form name="form1" class="form-horizontal" role="form" method="post" action="@Url.Action("AddFixBalance","Managers")" onSubmit="return beforeSubmit(this);">
        <div class="form-group">
            <label for="YourName" class="col-sm-4 control-label">存款金额</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker" name="FfixBalance" value="">
            </div>
        </div>
        <div class="form-group">
            <label for="colorpicker-rgb" class="col-sm-4 control-label">存款年利率</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker-rgb" name="FfixBalanceRate" value="">
            </div>
        </div>
        <div class="form-group">
            <label for="colorpicker-rgb" class="col-sm-4 control-label">存款年限</label>
            <div class="col-sm-8">
                <input type="text" class="form-control colorpicker-element" id="colorpicker-rgb" name="Fyear" value="">
            </div>
        </div>
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-greensea">提交</button>
            <button type="reset" class="btn btn-red">重新输入</button>
        </div>
    </form>
<script type="text/javascript">
    function beforeSubmit(form) {
        if (form.FfixBalance.value == '') {
            alert('定期存款额不能为空！');
            form.FfixBalance.focus();
            return false;
        }
        if (form.FfixBalanceRate.value == '') {
            alert('存款利率不能为空！');
            form.FfixBalanceRate.focus();
            return false;
        }
          if (form.Fyear.value == '') {
            alert('存款年限不能为空！');
            form.Fyear.focus();
            return false;
        }
    }
</script>
