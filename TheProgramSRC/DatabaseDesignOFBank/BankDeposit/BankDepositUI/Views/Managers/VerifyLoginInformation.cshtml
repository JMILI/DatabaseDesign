@{
    Layout = "_SignInLayout";

    ViewData["Title"] = "Home Page";

    //var user = Model;
}
<form name="form1" class="form-horizontal" role="form" method="post" action="@Url.Action("BusinessLogin","Managers")" onSubmit="return beforeSubmit(this);">
    <div class="form-group">
        <label for="YourName" class="col-sm-4 control-label">银行卡号</label>
        <div class="col-sm-8">
            <input type="text" class="form-control colorpicker-element" id="colorpicker" name="Id" value="">
        </div>
    </div>
    <div class="form-group">
        <label for="colorpicker-rgb" class="col-sm-4 control-label">密码</label>
        <div class="col-sm-8">
            <input type="password" class="form-control colorpicker-element" id="colorpicker-rgb" name="Password" value="">
        </div>
    </div>
    <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-greensea">提交</button>
        <button type="reset" class="btn btn-red">重新输入</button>
    </div>
</form>
<script type="text/javascript">
    function beforeSubmit(form) {
        if (form.Id.value == '') {
            alert('账号不能为空！');
            form.Id.focus();
            return false;
        }
        if (form.Password.value == '') {
            alert('密码不能为空！');
            form.Password.focus();
            return false;
        }
    }
</script>
