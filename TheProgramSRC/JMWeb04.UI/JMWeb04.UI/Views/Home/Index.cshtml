@{
    Layout = "_SigninLayout";
}
    <form action="@Url.Action("LoginIn","Student")" method="post">
        <section>
            <div class="input-group">
                <input type="text" class="form-control" name="StudentId" placeholder="学号">
                <div class="input-group-addon"><i class="fa fa-user"></i></div>
            </div>
            <div class="input-group">
                <input type="password" class="form-control" name="Password" placeholder="密码">
                <div class="input-group-addon"><i class="fa fa-key"></i></div>
            </div>
        </section>
        <section class="controls">
            <div class="checkbox check-transparent">
                <input type="checkbox" value="1" id="remember" checked="">
                <label for="remember">记住密码</label>
            </div>
            <a href="#">忘记密码？</a>
        </section>
        <section class="log-in">
            <button class="btn btn-greensea" type="submit">登录</button>
            <span>or</span>
            <button class="btn btn-slategray" type="button" onclick="show()">创建账户</button>
        </section>
    </form>
</div>
<!-- Wrap all page content end -->
<script type="text/javascript">
                                    function show(){
                                    var url = '@Url.Action("Add", "Student")';
                                        location.href = url;
                                    //window.open(url);
                            }
</script>
