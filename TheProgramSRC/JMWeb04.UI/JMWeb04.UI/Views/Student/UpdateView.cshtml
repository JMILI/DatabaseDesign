@{
    Layout = "_SigninLayout";
    var user = Model;
}
<form class="form-horizontal" role="form" method="post" action="@Url.Action("Update","Student")">
    <div class="form-group">
        <label for="colorpicker-rgb" class="col-sm-4 control-label" >学号</label>
        <div class="col-sm-8">
            <input type="text" class="form-control colorpicker-element" id="colorpicker-rgb" name="StudentId"value="@user" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label for="YourName" class="col-sm-4 control-label">姓名</label>
        <div class="col-sm-8">
            <input type="text" class="form-control colorpicker-element" id="colorpicker" name="Name">
        </div>
    </div>
    <div class="form-group">
        <label for="colorpicker-rgb" class="col-sm-4 control-label">班级</label>
        <div class="col-sm-8">
            <input type="text" class="form-control colorpicker-element" id="colorpicker-rgb" name="ClassCode">
        </div>
    </div>

    <div class="form-group">
        <label for="colorpicker-rgb" class="col-sm-4 control-label">密码</label>
        <div class="col-sm-8">
            <input type="password" class="form-control colorpicker-element" id="colorpicker-rgb" name="Password">
        </div>
    </div>

    <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-greensea">提交</button>
        <button type="reset" class="btn btn-red">重新输入</button>
    </div>
</form>
